@{
  string ActiveNav(string action)
  {
    string currentAction = ViewContext.RouteData.Values["Action"].ToString();
    return (action == currentAction) ? "active" : "";
  }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GBCSporting_Team_Amigos.styles.css" asp-append-version="true" />
</head>
<body>
    <header>


        <nav class="navbar navbar-expand navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SportsPro_Amigos</a>
                <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse col-lg-auto">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link @ActiveNav("Index")" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @ActiveNav("Product")" asp-controller="Product" asp-action="Index">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @ActiveNav("Technician")" asp-controller="Technician" asp-action="Index">Technicians</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @ActiveNav("Customer")" asp-controller="Customer" asp-action="Index">Customers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @ActiveNav("Incident")" asp-controller="Incident" asp-action="Index">Incidents</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @ActiveNav("Registration")" asp-controller="Registration" asp-action="Index">Registrations</a>
                        </li>
                        <li class="nav-item ml-auto">
                            <a class="nav-link @ActiveNav("About")" asp-controller="Home" asp-action="About">About</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
        <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - GBCSporting_Team_Amigos
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
